<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/single_status"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/profile" />


    <TextView
        android:id="@+id/display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="145dp"
        android:layout_marginTop="40dp"
        android:text="Display Name"
        android:textColor="#000000"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/default_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="138dp"
        android:layout_marginTop="80dp"
        android:alpha="0.6"
        android:text="Hello I am using ChatApp"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/user_single_online"
        android:layout_width="14dp"
        android:layout_height="13dp"
        android:layout_alignTop="@+id/display_name"
        android:layout_alignBottom="@+id/display_name"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/online"
        android:visibility="invisible"

        />


</RelativeLayout>