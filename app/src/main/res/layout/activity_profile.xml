<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ProfileActivity">

    <include
        android:id="@+id/profile_layout"
        layout="@layout/app_bar_layout" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/p_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <ImageView
        android:id="@+id/imageprofile"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_below="@+id/p_toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="1dp"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/userid"
        android:layout_width="162dp"
        android:layout_height="30dp"
        android:layout_below="@+id/imageprofile"
        android:layout_alignStart="@+id/imageprofile"
        android:layout_alignEnd="@+id/imageprofile"
        android:layout_marginStart="127dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="122dp"
        android:text="Display Name"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/prostatus"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userid"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="119dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="100dp"
        android:text="CurrentUserStatus"
        android:textAlignment="center"
        android:textColor="#4B4848"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/profriend"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prostatus"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="146dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="150dp"
        android:text="Total Friends"
        android:textAlignment="center"
        android:textColor="#4B4848"
        android:textSize="16dp" />

    <Button
        android:id="@+id/proreq"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profriend"
        android:layout_alignParentStart="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="34dp"
        android:background="@color/colorAccent"
        android:padding="10dp"
        android:text="Send Friend Request" />

    <Button
        android:id="@+id/decline"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/proreq"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="88dp"
        android:background="@color/colorAccent"
        android:padding="10dp"
        android:text="Decline Friend Request" />
</RelativeLayout>